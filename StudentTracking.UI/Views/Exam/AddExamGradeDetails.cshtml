@model List<StudentSelectVM>
@{
    ViewData["Title"] = "AddExamGradeDetails";
}

<h1>AddExamGradeDetails</h1>

<form asp-action="SaveExamGrades" asp-controller="Exam" method="post" class="form">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Öğrenci Adı Soyadı</th>
                <th>Not</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].FirstName @Model[i].LastName
                        <input type="hidden" asp-for="@Model[i].ID" />
                        <input type="hidden" asp-for="@Model[i].StatusID" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].ClassID" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].StatusName" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>